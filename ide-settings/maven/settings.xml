<?xml version="1.0" encoding="UTF-8"?>
<settings>
  <localRepository>${M2_REPO}</localRepository>
  
  <servers>
    <server>
      <id>ossrh</id>
      <username>${OSSRH_USER}</username>
      <password>${OSSRH_PASSWD}</password>
    </server>
	<server>
      <id>sonartype.releases</id>
      <username>${OSSRH_USER}</username>
      <password>${OSSRH_PASSWD}</password>
    </server>
	<server>
      <id>sonartype.snapshots</id>
      <username>${OSSRH_USER}</username>
      <password>${OSSRH_PASSWD}</password>
    </server>
	<server>
      <id>bintray-repo</id>
      <username>${BINTRAY_USER}</username>
      <password>${BINTRAY_TOKEN}</password>
    </server>
  </servers>

  <profiles>
    <profile>
      <id>sonartype</id>
      <repositories>
        <repository>
          <id>sonartype.snapshots</id>
          <name>Sonartype Snapshots</name>
          <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
          <releases>
            <enabled>false</enabled>
            <updatePolicy>always</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
    </profile>
    <profile>
      <id>ossrh</id>
      <properties>
        <gpg.executable>gpg2</gpg.executable>
        <gpg.passphrase>${GPG_SIGNING_PASSWD}</gpg.passphrase>
      </properties>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>sonartype</activeProfile>
	<activeProfile>ossrh</activeProfile>
  </activeProfiles>
</settings>
