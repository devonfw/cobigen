<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

  <configuration>
    <stop-on-errors>true</stop-on-errors>
  </configuration>

  <!-- General Mapping of JAXB Lists -->
  <mapping map-null="true">
    <class-a>com.devonfw.cobigen.impl.config.entity.io.v2_0.Trigger</class-a>
    <class-b>com.devonfw.cobigen.impl.config.entity.io.v2_1.Trigger</class-b>
    <field>
      <a is-accessible="true">containerMatcher</a>
      <b is-accessible="true">containerMatcher</b>
    </field>
    <field>
      <a is-accessible="true">matcher</a>
      <b is-accessible="true">matcher</b>
    </field>
  </mapping>

  <mapping map-null="true">
    <class-a>com.devonfw.cobigen.impl.config.entity.io.v2_0.ContainerMatcher</class-a>
    <class-b>com.devonfw.cobigen.impl.config.entity.io.v2_1.ContainerMatcher</class-b>
    <field>
      <a get-method="isRetrieveObjectsRecursively" set-method="setRetrieveObjectsRecursively">retrieveObjectsRecursively</a>
      <b get-method="isRetrieveObjectsRecursively" set-method="setRetrieveObjectsRecursively">retrieveObjectsRecursively</b>
    </field>
  </mapping>

  <mapping map-null="true">
    <class-a>com.devonfw.cobigen.impl.config.entity.io.v2_0.Matcher</class-a>
    <class-b>com.devonfw.cobigen.impl.config.entity.io.v2_1.Matcher</class-b>
    <field>
      <a is-accessible="true">variableAssignment</a>
      <b is-accessible="true">variableAssignment</b>
    </field>
  </mapping>

  <!-- Mapping due to changes of the XSD -->

  <mapping map-null="true">
    <class-a>com.devonfw.cobigen.impl.config.entity.io.v2_0.ContextConfiguration</class-a>
    <class-b>com.devonfw.cobigen.impl.config.entity.io.v2_1.ContextConfiguration</class-b>
    <field>
      <a is-accessible="true">triggers.trigger</a>
      <b is-accessible="true">trigger</b>
    </field>
  </mapping>

</mappings>
