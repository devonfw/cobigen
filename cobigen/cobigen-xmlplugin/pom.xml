    </dependency>
    <dependency>
      <groupId>com.devonfw.cobigen</groupId>
      <artifactId>tempeng-freemarker</artifactId>
      <version>2.0.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
   <build>
    <resources>
	    <resource>
      <directory>src/main/resources</directory>
      <filtering>false</filtering>
