<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<templatesConfiguration xmlns="http://capgemini.com/devonfw/cobigen/TemplatesConfiguration"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1">

  <templates>
    <templateExtension ref="${variables.etoName}-operations.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="${variables.etoName}.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="app.component.ts" mergeStrategy="tsmerge_override"/>
    <templateExtension ref="app.module.ts" mergeStrategy="tsmerge_override"/>
    <templateExtension ref="${variables.etoName}.module.ts" mergeStrategy="tsmerge_override"/>
    <templateExtension ref="${variables.etoName}-business.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="${variables.etoName}store.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="${variables.etoName}-operations.html" mergeStrategy="html-ng*"/>
    <templateExtension ref="${variables.etoName}.html" mergeStrategy="html-ng*"/>
    <templateExtension ref="${variables.etoName}-operations-dialog.html" mergeStrategy="html-ng*"/>
    <templateExtension ref="${variables.etoName}-operations-dialog.ts" mergeStrategy="tsmerge_override"/>
    <templateExtension ref="es.json" mergeStrategy="jsonmerge_override"/>
    <templateExtension ref="en.json" mergeStrategy="jsonmerge_override"/>
    <templateExtension ref="business-operator.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="serverPath.ts" mergeStrategy="tsmerge_override"/>
  </templates>

  <templateScans>
    <templateScan templatePath="templates" destinationPath="src/main/java"/>
  </templateScans>

  <increments>
    <increment name="app_ionic_structure" description="Ionic OASP4J URL">
        <templateRef ref="serverPath.ts"/>
    </increment>
    <increment name="ionic_i18n" description="Ionic i18n">
      <templateRef ref="es.json"/>
      <templateRef ref="en.json"/>
    </increment>
    <increment name="ionic_component" description="Ionic Grid">
      <templateRef ref="${variables.etoName}.ts"/>
      <templateRef ref="app.component.ts"/>
      <templateRef ref="app.module.ts"/>
      <templateRef ref="${variables.etoName}.module.ts"/>
      <templateRef ref="${variables.etoName}.html"/>
      <templateRef ref="${variables.etoName}-operations.ts"/>
      <templateRef ref="${variables.etoName}-operations.html"/>
      <templateRef ref="${variables.etoName}-operations-dialog.ts"/>
      <templateRef ref="${variables.etoName}-operations-dialog.html"/>      
      <templateRef ref="${variables.etoName}-business.ts"/>
      <templateRef ref="${variables.etoName}store.ts"/>
      <templateRef ref="business-operator.ts"/>
    </increment>
  </increments>
</templatesConfiguration> 