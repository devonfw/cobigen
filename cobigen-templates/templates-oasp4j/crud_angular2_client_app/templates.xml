<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<templatesConfiguration xmlns="http://capgemini.com/devonfw/cobigen/TemplatesConfiguration"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1">

  <templates>
    <templateExtension ref="${variables.etoName}AddDialog.component.html" mergeStrategy="html-ng*"/>
    <templateExtension ref="${variables.etoName}AddDialog.component.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="${variables.etoName}DataGrid.component.html" mergeStrategy="html-ng*"/>
    <templateExtension ref="${variables.etoName}DataGrid.component.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="${variables.etoName}DataGrid.service.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="header.component.html"/>
    <templateExtension ref="header.component.ts"/>
    <templateExtension ref="home.component.html"/>
    <templateExtension ref="home.component.ts"/>
    <templateExtension ref="login.component.html"/>
    <templateExtension ref="login.component.ts"/>
    <templateExtension ref="security.service.ts"/>
    <templateExtension ref="httpClient.service.ts"/>
    <templateExtension ref="app.component.css"/>
    <templateExtension ref="app.component.html" mergeStrategy="html-ng*"/>
    <templateExtension ref="app.component.ts"/>
    <templateExtension ref="app.module.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="app.routing.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="BusinessOperations.ts" mergeStrategy="tsmerge"/>
    <templateExtension ref="es.json" mergeStrategy="jsonmerge"/>
    <templateExtension ref="en.json" mergeStrategy="jsonmerge"/>
    <templateExtension ref="de.json" mergeStrategy="jsonmerge"/>
    <templateExtension ref="serverPath.ts"/>
  </templates>

  <templateScans>
    <templateScan templatePath="templates" destinationPath="devon4ng2"/>
  </templateScans>

  <increments>
    <increment name="app_angular_grid" description="NG2 Grid">
      <templateRef ref="${variables.etoName}DataGrid.component.html"/>
      <templateRef ref="${variables.etoName}DataGrid.component.ts"/>
      <templateRef ref="${variables.etoName}DataGrid.service.ts"/>
    </increment>
    <increment name="app_angular_add" description="NG2 Add Dialog">
      <templateRef ref="${variables.etoName}AddDialog.component.html"/>
      <templateRef ref="${variables.etoName}AddDialog.component.ts"/>
    </increment>
    <increment name="app_angular_i18n" description="NG2 i18n">
      <templateRef ref="es.json"/>
      <templateRef ref="en.json"/>
      <templateRef ref="de.json"/>
    </increment>
    <increment name="app_angular_routing" description="NG2 Routing">
      <templateRef ref="app.routing.ts"/>
    </increment>
    <increment name="app_angular_business" description="NG2 Business Operations">
      <templateRef ref="BusinessOperations.ts"/>
    </increment>
    <increment name="app_angular_security" description="NG2 Security">
      <templateRef ref="login.component.ts"/>
      <templateRef ref="security.service.ts"/>
      <templateRef ref="httpClient.service.ts"/>
    </increment>
    <increment name="app_angular_base" description="NG2 Project Structure">
      <templateRef ref="header.component.html"/>
      <templateRef ref="header.component.ts"/>
      <templateRef ref="home.component.html"/>
      <templateRef ref="home.component.ts"/>
      <templateRef ref="login.component.html"/>
      <templateRef ref="app.component.css"/>
      <templateRef ref="app.component.html"/>
      <templateRef ref="app.component.ts"/>
      <templateRef ref="app.module.ts"/>
      <templateRef ref="serverPath.ts"/>
    </increment>
  </increments>
</templatesConfiguration>
