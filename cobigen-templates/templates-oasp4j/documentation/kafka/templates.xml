<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<templatesConfiguration xmlns="http://capgemini.com/devonfw/cobigen/TemplatesConfiguration"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1">

  <templates>
    <templateExtension ref="Documentation_${variables.domain#cap_first}.adoc" mergeStrategy="textmerge_append"/>
  </templates>

  <templateScans>
    <templateScan templatePath="templates" destinationPath="src/main"/>
  </templateScans>

  <increments>
    <increment name="Kafka_Docs" description="Documentation">
      <templateRef ref="Documentation_${variables.domain#cap_first}.adoc"/>
    </increment>
  </increments>
</templatesConfiguration>
