<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<templatesConfiguration xmlns="http://capgemini.com/devonfw/cobigen/TemplatesConfiguration"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1">

  <templates>
    <templateExtension ref="X_EntityName_XEntity.java" mergeStrategy="javamerge"/>
    <templateExtension ref="X_EntityName_X.java" mergeStrategy="javamerge"/>
    <templateExtension ref="X_EntityName_XRepository.java" mergeStrategy="javamerge"/>

    <templateExtension ref="X_EntityName_XEto.java" mergeStrategy="javamerge"/>
    <templateExtension ref="X_EntityName_XRestService.java" mergeStrategy="javamerge"/>
    <!--
    <templateExtension ref="X_EntityName_XCto.java" mergeStrategy="javamerge"/>
    <templateExtension ref="X_EntityName_XSearchCriteriaTo.java" mergeStrategy="javamerge"/>
    <templateExtension ref="AbstractSearchCriteriaTo.java" mergeStrategy="javamerge"/>

    <templateExtension ref="X_EntityName_XRestServiceImpl.java" mergeStrategy="javamerge"/>
    -->
  </templates>

  <templateScans>
    <templateScan templatePath="." destinationPath="src/main/java"/>
  </templateScans>

  <increments>
    <increment name="dataaccess" description="Data-access (Repository)">
      <templateRef ref="X_EntityName_XRepository.java"/>
    </increment>
    <increment name="entity" description="Entity infrastructure">
      <templateRef ref="AbstractEto.java"/>
      <templateRef ref="ApplicationEntity.java"/>
      <templateRef ref="ApplicationPersistenceEntity.java"/>
      <templateRef ref="X_EntityName_X.java"/>
      <templateRef ref="X_EntityName_XEntity.java"/>
      <templateRef ref="X_EntityName_XEto.java"/>
    </increment>
    <increment name="logic" description="Logic (Use-Cases)">
      <templateRef ref="ApplicationAccessControlConfig.java"/>
      <templateRef ref="AbstractUcX_EntityName_X.java"/>
      <templateRef ref="UcDeleteX_EntityName_X.java"/>
      <templateRef ref="UcFindX_EntityName_X.java"/>
      <templateRef ref="UcSaveX_EntityName_X.java"/>
    </increment>
    <increment name="rest" description="REST service">
      <templateRef ref="X_EntityName_XRestService.java"/>
    </increment>
    <!--
    <increment name="tos" description="TO's">
      <templateRef ref="AbstractSearchCriteriaTo.java"/>
      <templateRef ref="X_EntityName_XSearchCriteriaTo.java"/>
    </increment>
    <increment name="ctos" description="CTO's">
      <templateRef ref="X_EntityName_XCto.java"/>
    </increment>
    <increment name="rest_service_impl_ctos" description="CRUD REST services (CTOs)">
      <templateRef ref="AbstractBeanMapperSupport.java"/>
      <templateRef ref="AbstractComponentFacade.java"/>
      <templateRef ref="${variables.component#cap_first}RestServiceImplCtos.java"/>
      <templateRef ref="${variables.component#cap_first}RestServiceCtos.java"/>
    </increment>
    -->
  </increments>
</templatesConfiguration>
