<?xml version="1.0" encoding="UTF-8"?>
<templatesConfiguration xmlns="http://capgemini.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0">
	<templates>
		<template id="entityBuilder" destinationPath="src/test/java/${variables.rootPackage}/${variables.component}/common/builders/${variables.pojoName}Builder.java" templateFile="ObjectBuilder.java.ftl" mergeStrategy="javamerge" />
		<template id="entityBuilder_customFunctions" destinationPath="src/test/java/${variables.rootPackage}/${variables.component}/common/builders/${variables.pojoName}Builder.java" templateFile="ObjectBuilder_customFunctions.java.ftl" mergeStrategy="javamerge" />
		<template id="entityBuilder_fillMandatoryFields" destinationPath="src/test/java/${variables.rootPackage}/${variables.component}/common/builders/${variables.pojoName}Builder.java" templateFile="ObjectBuilder_fillMandatoryFields.java.ftl" mergeStrategy="javamerge_override" />
		<template id="entityBuilder_persistable" destinationPath="src/test/java/${variables.rootPackage}/${variables.component}/common/builders/${variables.pojoName}Builder.java" templateFile="ObjectBuilder_persistable.java.ftl" mergeStrategy="javamerge" />
		<template id="P" destinationPath="src/test/java/${variables.rootPackage}/${variables.component}/common/builders/P.java" templateFile="P.java.ftl" />
	</templates>

	<increments>
		<increment id="testdata_builder" description="Testdata builder">
			<templateRef idref="P"/>
			<templateRef idref="entityBuilder"/>
			<templateRef idref="entityBuilder_fillMandatoryFields"/>
			<templateRef idref="entityBuilder_customFunctions"/>
		</increment>
		<increment id="testdata_builder_persistable" description="Testdata builder (persistable)">
			<templateRef idref="P"/>
			<templateRef idref="entityBuilder"/>
			<templateRef idref="entityBuilder_fillMandatoryFields"/>
			<templateRef idref="entityBuilder_customFunctions"/>
			<templateRef idref="entityBuilder_persistable"/>
		</increment>
	</increments>
</templatesConfiguration>
