<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.devonfw</groupId>
  <artifactId>devon4jTemplateTest-TestAllTemplatesXMLInput</artifactId>
  <version>dev-SNAPSHOT</version>

  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>com.devonfw.cobigen</groupId>
        <artifactId>cobigen-maven-plugin</artifactId>
        <version>5.0.0</version>
        <executions>
          <execution>
            <id>generate</id>
            <phase>package</phase>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <configurationFolder>${templatesProject}</configurationFolder>
          <inputFiles>
            <inputFile>src/main/xml/io/github/devonfw/cobigen/generator/dataaccess/api/Input.xml</inputFile>
          </inputFiles>
          <templates>
            <template>ALL</template>
          </templates>
          <failOnNothingGenerated>true</failOnNothingGenerated>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>com.devonfw.cobigen</groupId>
            <artifactId>tempeng-freemarker</artifactId>
            <version>2.1.0</version>
          </dependency>
          <dependency>
            <groupId>com.devonfw.cobigen</groupId>
            <artifactId>javaplugin</artifactId>
            <version>2.2.0</version>
          </dependency>
          <dependency>
            <groupId>com.devonfw.cobigen</groupId>
            <artifactId>xmlplugin</artifactId>
            <version>4.2.0</version>
          </dependency>
          <dependency>
            <groupId>com.devonfw.cobigen</groupId>
            <artifactId>openapiplugin</artifactId>
            <version>2.4.0</version>
          </dependency>
          <dependency>
            <groupId>com.devonfw.cobigen</groupId>
            <artifactId>textmerger</artifactId>
            <version>2.1.0</version>
          </dependency>
          <dependency>
            <groupId>com.devonfw.cobigen</groupId>
            <artifactId>tsplugin</artifactId>
            <version>2.4.2</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
