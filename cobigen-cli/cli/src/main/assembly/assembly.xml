<assembly>
  <id>release</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/assembly/resources</directory>
      <outputDirectory>./</outputDirectory>
      <excludes>
        <exclude>bin/**</exclude>
      </excludes>
      <fileMode>0644</fileMode>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/main/assembly/resources/bin/cg</source>
      <outputDirectory>/bin</outputDirectory>
      <destName>cg</destName>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/main/assembly/resources/bin/cg</source>
      <outputDirectory>/bin</outputDirectory>
      <destName>cobigen</destName>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/main/assembly/resources/bin/cg.bat</source>
      <outputDirectory>/bin</outputDirectory>
      <destName>cg.bat</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>src/main/assembly/resources/bin/cg.bat</source>
      <outputDirectory>/bin</outputDirectory>
      <destName>cobigen.bat</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>target/cobigen.jar</source>
      <outputDirectory>/lib</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <excludes>
        <exclude>com.google.errorprone:javac-shaded</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
